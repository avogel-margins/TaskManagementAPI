{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "add"
      ]
    ],
    "scope-case": [2, "always", "upper-case"],
    "scope-empty": [2, "never"],
    "scope-enum": [
      2,
      "always"
    ],
    "header-max-length": [2, "always", 100],
    "subject-case": [2, "always", "lower-case"],
    "subject-full-stop": [2, "never", "."]
  }
}